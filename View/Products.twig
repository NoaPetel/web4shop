{% extends 'layout.twig'%}


{% block content %}
	<!doctype html>
	<html>
		<head>
			<title>ISIWEBShop</title>
			<meta charset='UTF-8'>
			<meta name="viewport" content="width=device-width, initial-scale=1">
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
			<link rel="stylesheet" href="Contenu/style.css">
		</head>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

		<br>
		<br>
		<br>
		<br>
		<body>
			<div class="container mt-4">
				<div class="row">
					{% for product in products %}
						<div class="col-md-4 mb-4">
							<a href="" class="card h-100 text-decoration-none">
								<div class="card">
									<img src="../public/images/{{ product.image }}" class="card-img-top" alt="{{ product.name }}">
									<div class="card-body">
										<h5 class="card-title">{{ product.name }}</h5>
										<p class="card-text">{{ product.description }}</p>
										<p class="card-text">
											<strong>Price:</strong>
											{{ product.price }}
											{{ product.currency }}</p>
										{# Ajoutez d'autres informations sur le produit selon vos besoins #}
									</div>
								</div>
							</a>
						</div>
					{% endfor %}
				</div>
			</div>
		</body>
	</html>
</div></body></html>{% endblock %}
